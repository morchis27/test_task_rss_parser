    },
    "components": {
        "schemas": {
            "AuthTokenResponse": {
                "required": [
                    "success",
                    "data"
                ],
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "data": {
                        "properties": {
                            "token": {
                                "type": "string",
                                "example": "1|xxxx..."
                            },
                            "user": {
                                "properties": {
                                    "id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Jane Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jane@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "Post": {
                "required": [
                    "id",
                    "title",
                    "link",
                    "description",
                    "pub_date",
                    "created_at",
                    "updated_at"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Sample title"
                    },
                    "link": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://lifehacker.com/xyz"
                    },
                    "description": {
                        "type": "string",
                        "example": "<p>HTML or text…</p>"
                    },
                    "pub_date": {
                        "type": "string",
                        "example": "Sat, 18 Oct 2025 21:30:00 +0000"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-18T20:55:56Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-18T20:55:56Z"
                    }
                },
                "type": "object"
            },
            "PaginationMeta": {
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 15
                    },
                    "total": {
                        "type": "integer",
                        "example": 123
                    },
                    "last_page": {
                        "type": "integer",
                        "example": 9
                    }
                },
                "type": "object"
            },
            "SuccessWrapperPost": {
                "required": [
                    "success",
                    "data"
                ],
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "data": {
                        "$ref": "#/components/schemas/Post"
                    }
                },
                "type": "object"
            },
            "SuccessWrapperPosts": {
                "required": [
                    "success",
                    "data",
                    "meta"
                ],
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Post"
                        }
                    },
                    "meta": {
                        "$ref": "#/components/schemas/PaginationMeta"
                    }
                },
                "type": "object"
            },
            "SuccessMessage": {
                "required": [
                    "success",
                    "message"
                ],
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "Post deleted successfully"
                    }
                },
                "type": "object"
            },
            "PostCreateRequest": {
                "required": [
                    "title",
                    "link"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "New Article"
                    },
                    "link": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://example.com/new-article"
                    },
                    "description": {
                        "type": "string",
                        "example": "<p>HTML…</p>"
                    },
                    "pub_date": {
                        "type": "string",
                        "example": "Sat, 18 Oct 2025 21:30:00 +0000"
                    }
                },
                "type": "object"
            },
            "PostUpdateRequest": {
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "link": {
                        "type": "string",
                        "format": "uri"
                    },
                    "description": {
                        "type": "string"
                    },
                    "pub_date": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "ErrorResponse": {
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": false
                    },
                    "message": {
                        "type": "string",
                        "example": "No results found"
                    }
                },
                "type": "object"
            },
            "ValidationErrorResponse": {
                "required": [
                    "message",
                    "errors"
                ],
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The title field is required."
                    },
                    "errors": {
                        "type": "object",
                        "example": {
                            "title": [
                                "The title field is required."
                            ]
                        },
                        "additionalProperties": {
                            "schema": "Schemas",
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": "object"
            },
            "Schemas": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "bearerFormat": "Personal Access Token",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Posts",
            "description": "Posts"
        }
    ]
}